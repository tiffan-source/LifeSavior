{
  "name": "angular-web-ui-docs",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "prefix": "app",
  "sourceRoot": "apps/angular-web-ui-docs/src",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@ng-doc/builder:application",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/apps/angular-web-ui-docs",
        "browser": "apps/angular-web-ui-docs/src/main.ts",
        "tsConfig": "apps/angular-web-ui-docs/tsconfig.app.json",
        "assets": [
          {
            "glob": "**/*",
            "input": "node_modules/@ng-doc/app/assets",
            "output": "assets/ng-doc/app"
          },
          {
            "glob": "**/*",
            "input": "node_modules/@ng-doc/ui-kit/assets",
            "output": "assets/ng-doc/ui-kit"
          },
          {
            "glob": "**/*",
            "input": "ng-doc/angular-web-ui-docs/assets",
            "output": "assets/ng-doc"
          },
          {
            "glob": "**/*",
            "input": "apps/angular-web-ui-docs/public"
          }
        ],
        "styles": [
          "node_modules/@ng-doc/app/styles/global.css",
          "apps/angular-web-ui-docs/src/styles.css"
        ],
        "server": "apps/angular-web-ui-docs/src/main.server.ts",
        "ssr": {
          "entry": "apps/angular-web-ui-docs/src/server.ts"
        },
        "outputMode": "server",
        "allowedCommonJsDependencies": [
          "@ng-doc/core"
        ]
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "1mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "4kb",
              "maximumError": "8kb"
            }
          ],
          "outputHashing": "all"
        },
        "development": {
          "optimization": false,
          "extractLicenses": false,
          "sourceMap": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "continuous": true,
      "executor": "@ng-doc/builder:dev-server",
      "configurations": {
        "production": {
          "buildTarget": "angular-web-ui-docs:build:production"
        },
        "development": {
          "buildTarget": "angular-web-ui-docs:build:development"
        }
      },
      "defaultConfiguration": "development"
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "serve-static": {
      "continuous": true,
      "executor": "@nx/web:file-server",
      "options": {
        "buildTarget": "angular-web-ui-docs:build",
        "port": 4200,
        "staticFilePath": "dist/apps/angular-web-ui-docs/browser",
        "spa": true
      }
    }
  }
}